{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types" ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
